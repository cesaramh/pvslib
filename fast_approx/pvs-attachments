(defun get-dec-precision ()
  (expt 10 (- (pvsio_get_gvar_by_name "stdmath.PRECISION"))))

(defattach |sqrt.sqrt| (x)
  "Square root of X using fast_approx theory"
  (pvsio-funcall "fast_approx.sqrt_fast_approx" x (get-dec-precision)))

(defattach |pi_def.pi| ()
  "Number Ï€ using fast_approx theory"
  (pvsio-funcall "fast_approx.pi_fast_approx" x (get-dec-precision)))

(defattach |sincos_def.sin| (x)
  "Sine of X using fast_approx theory"
  (pvsio-funcall "fast_approx.sin_fast_approx" x (get-dec-precision)))
 
(defattach |sincos_def.cos| (x)
  "Cosine of X using fast_approx theory"
  (pvsio-funcall "fast_approx.cos_fast_approx" x (get-dec-precision)))

(defattach |trig_basic.tan| (x)
  "Tangent of X using fast_approx theory"
  (pvsio-funcall "fast_approx.tan_fast_approx" x (get-dec-precision)))

(defattach |atan.atan| (x)
  "Arc tangent of X using fast_approx theory"
  (let ((precision (get-dec-precision)))
    (pvsio-funcall "fast_approx.atan_fast_approx"
		 x precision
		 (pvsio-funcall "fast_approx.pihalf_fast_approx_br" precision))))
